<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="75dip"
    tools:context=".LoginActivity" >

    <ImageView
        android:id="@+id/img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dip"
        android:background="@drawable/logo"
        />
    
    <TextView
        android:id="@+id/te9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:paddingTop="20dip"
        android:text="账号：" />
    
    <EditText
        android:id="@+id/ed1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/te9"
        android:layout_alignBottom="@+id/te9"
        android:paddingTop="20dip"
        />
    
    <TextView
        android:id="@+id/te10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/te9"
        android:paddingTop="20dip"
        android:text="密码：" />

    <EditText
        android:id="@+id/ed2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/te10"
        android:layout_alignBottom="@+id/te10"
        android:paddingTop="20dip" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/bu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/te1"
        android:layout_below="@+id/te10"
        android:layout_centerInParent="true"
        android:paddingTop="20dip"
        android:text="登录" />
    
    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bu"
        android:layout_centerHorizontal="true"
        android:textColor="#990033"
        android:textIsSelectable="true" />
    

</RelativeLayout>
